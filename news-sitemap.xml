---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<!-- Google News sitemap: optimized for 6 daily articles, last 48 hours -->
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">
  {% comment %} Google News requires 48-hour window for news articles {% endcomment %}
  {% assign cutoff = site.time | date: '%s' | minus: 172800 %}
  {% for post in site.posts limit:1000 %}
    {% assign post_time = post.date | date: '%s' | plus: 0 %}
    {% if post_time >= cutoff %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      <news:news>
        <news:publication>
          <news:name>{{ site.publication_name | default: site.title }}</news:name>
          <news:language>{{ post.lang | default: site.lang | default: 'en' }}</news:language>
        </news:publication>
        <news:publication_date>{{ post.date | date_to_xmlschema }}</news:publication_date>
        <news:title>{{ post.title | escape }}</news:title>
        {% if post.keywords %}
          {% assign kw_list = post.keywords | join: ', ' %}
          <news:keywords>{{ kw_list }}</news:keywords>
        {% elsif post.tags %}
          <news:keywords>{{ post.tags | join: ', ' }}</news:keywords>
        {% endif %}
      </news:news>
    </url>
    {% endif %}
  {% endfor %}
</urlset>
